@model IEnumerable<MVC_Project1.Models.Product>
@{
    ViewBag.Title = "ViewProduct";

}
<link href="~/Content/CSS/ViewProduct.css" rel="stylesheet" />
}

<div class="grid-container">
   @foreach (var product in Model)
   {
       <div class="grid-item">
           <a class=" product-item"
               @{ var route = "/Detail/ViewDetail/" + product.Id;}
               href="@route">
               @{ var thumbnail = product.url;}
               <img src="@thumbnail" />
               <div class="info">
                   <div class="product-name">
                       @product.name
                   </div>
                   <div class="product-price">
                       @string.Format("{0:0.000}", product.Price) <span style="text-decoration: underline">đ</span>
                   </div>
               </div>

           </a>
       </div>
    }
</div>
