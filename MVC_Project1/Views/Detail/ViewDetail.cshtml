@model Bussiness.ProductService.ProductDTO
@{
    ViewBag.Title = "Detail";
}

@section css{
    <link href="~/Content/_bundle-viewdetail.min.css" rel="stylesheet" />
}
@{
    var img_url = "/Content/images/" + Model.Thumb;
}
<div class="grid-container">
    <div class="grid-item1">
        <img src="@img_url" alt="@Model.Name" />
    </div>
    <div class="grid-item2">
        <div class="header-info">
            <div>
                <div class="product-brand">Thương hiệu: ....</div>
            </div>
            <div class="product-name">
                <div id="name">@Model.Name</div>
            </div>
            <div>
                <div style="line-height: 24px; color: rgb(120, 120, 120)">|| Đã bán 1000+</div>
            </div>

        </div>
        <div class="body-info">
            <div class="body-info-item" id="body-info-item1">
                <div class="price-and-icon">
                    <div class="product-price">
                        <span id="price">@string.Format("{0:0,0.000}", @Model.Price) đ</span>
                    </div>
                    <div class="product-icon">
                        <div class="icon-content">
                            Tiki card: Hoàn tiền 15% tối đa 600k/tháng
                        </div>
                        <div class="icon-content">
                            FREESHIP: Không giới hạn, tự động áp dụng
                        </div>
                    </div>
                </div>
                <div class="product-option">
                </div>
                <hr />
                <hr />
                <div class="quantily-input">
                    <p class="quantity-label">Số lượng</p>
                    <div class="group-input">
                        <input onclick="giam()" type='button' value='-' />
                        <input id='quantity' min='1' name='quantity' type='number' value='1' />
                        <input onclick="tang()" type='button' value='+' />
                    </div>
                    <div>
                        <button class="buy-btn">Chọn mua</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/bundleJS/_bundle-detail.min.js"></script>
    }