@model MVC_Project1.Models.Product
@{ ViewBag.Title = "Detail"; }

@section css{
    <link href="~/Content/desktop/css/PhoneShop.min.css"?v=@(DateTime.Now.ToString("hhmmss")) rel="stylesheet" />

}
<p class="title-detail">Chi tiết sản phẩm</p>
<div class="grid-container-detail">
    <div class="grid-item1">
        <img src="@Model.url" alt="@Model.name" />
    </div>
    <div class="grid-item2">
        <div class="header-info">
            <div class="header-info-item" id="header-info-item1">
                <div>
                    <span class="brand">Hãng: @Model.brand</span>
                </div>
                <div class="product-name">
                    <span id="name">@Model.name</span>
                </div>
                <div>
                    <span style="line-height: 24px; color: rgb(120, 120, 120)">|| Đã bán 1000+</span>
                </div>
                <div>
                    <span style="line-height: 24px; color: rgb(120, 120, 120)">|| Số sao đánh giá sao đánh giá @Model.valueRating</span>
                </div>
            </div>
        </div>
        <div class="body-info">
            <div class="body-info-item" id="body-info-item1">
                <div class="price-and-icon">
                    <div class="product-price">
                        <span id="price">@string.Format("{0:0.000}", @Model.Price) đ </span>
                    </div>
                    <div class="product-icon">

                        <div class="description">
                            @Model.Description
                        </div>
                    </div>
                    <div class="endow">
                        <div class="icon-content">
                            <a>
                                <img  src="~/Content/desktop/images/tikicard.png" /><p style="font-size:16px;"> Hoàn tiền 15% tối đa 600k/tháng</p>
                            </a>
                        </div>
                        <div class="icon-content">
                            <img  src="~/Content/desktop/images/freeship.png" /> <p style="font-size:16px;">Không giới hạn, tự động áp dụng</p>
                        </div>
                    </div>
                </div>
               

                <div class="quantily-input">
                    <p class="quantity-label">Số lượng</p>
                    <div class="group-input">
                        <input onclick="giam()" type='button' value='-' />
                        <input id='quantity' min='1' name='quantity' type='number' value='1' />
                        <input onclick="tang()" type='button' value='+' />
                    </div>
                    <div>
                        <button class="buy-btn">Chọn mua</button>
                    </div>
                </div>
            </div>
        </div>  
    </div>
</div>
@section scripts{
    <script src="~/Scripts/js/viewdetail.js"> </script>
}
